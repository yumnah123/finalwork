datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id       String  @id @default(cuid())
  name     String  @default("")
  email    String  @unique @default("")
  password String?
}

model ContactPage {
  id               String @id @default(cuid())
  bookingService   String @default("24/7 Available")
  phoneSupport     String @default("24/7 Available")
  officeHours      String @default("Mon-Fri: 8:00-18:00")
  weekendOffice    String @default("Sat-Sun: 9:00-17:00")
  emergencyService String @default("24/7 Available")
  note             String @default("Our vehicles operate 24/7, including weekends and holidays. Emergency bookings and urgent requests are always accommodated.")
  faqs             FAQ[]  @relation("FAQ_contactPage")
}

model FAQ {
  id            String       @id @default(cuid())
  question      String       @default("")
  answer        String       @default("")
  order         Int?         @default(0)
  contactPage   ContactPage? @relation("FAQ_contactPage", fields: [contactPageId], references: [id])
  contactPageId String?      @map("contactPage")

  @@index([contactPageId])
}

model SiteSetting {
  id                 String  @id @default(cuid())
  siteName           String  @unique @default("Gold Star Executive")
  logo_filesize      Int?
  logo_filename      String?
  phoneNumber        String  @default("+44 (0) 203 858 786")
  phoneNumberRaw     String  @default("+442038587786")
  companyDescription String  @default("An executive car and chauffeur service covering Surrey, London and the Home Counties.")
  addressLine1       String  @default("Goldstar Executive Ltd")
  addressLine2       String  @default("3000 Cathedral Hill,")
  city               String  @default("Guildford,")
  postalCode         String  @default("GU2 7YB")
  country            String  @default("United Kingdom")
  googleMapsUrl      String  @default("https://maps.google.com/?q=Goldstar+Executive+Ltd,+3000+Cathedral+Hill,+Guildford,+GU2+7YB,+United+Kingdom")
  email              String  @default("bookings@goldstarexecutive.com")
  website            String  @default("www.goldstarexecutive.com")
  websiteUrl         String  @default("https://www.goldstarexecutive.co.uk")
  facebookUrl        String  @default("https://facebook.com")
  twitterUrl         String  @default("https://twitter.com")
  linkedinUrl        String  @default("https://www.linkedin.com/")
  copyrightText      String  @default("Copyright Â© 2025 Gold Star Executive. All Rights Reserved.")
  designerCredit     String  @default("Web Design UK by myteamscot.")
}
